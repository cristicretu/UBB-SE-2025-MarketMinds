<Window
    x:Class="MarketMinds.SeeBuyerReviewsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketMinds"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="SeeBuyerReviewsView">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- User and Rating Section IRRELEVANT FOR BUYER-->
        <!--<StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Spacing="10">
            <TextBlock Text="{x:Bind ViewModel.user.Username, Mode=OneWay}" FontSize="18" FontWeight="Bold"/>
            <RatingControl x:Name="AverageRatingStars"
                           Value="{x:Bind ViewModel.rating, Mode=OneWay}"
                           IsClearEnabled="False" IsReadOnly="True" MaxRating="5" Foreground="Gold"/>
            <TextBlock Text="({x:Bind ViewModel.reviews.Count, Mode=OneWay})" FontSize="16" Foreground="Gray"/>
        </StackPanel>!-->

        <TextBlock Text="{x:Bind ViewModel.user.Username, Mode=OneWay}" FontSize="24" FontWeight="Bold" Margin="20,5,0,5"/>
        <!-- Reviews List -->
        <ListView x:Name="ReviewsListView" Grid.Row="1" ItemsSource="{x:Bind ViewModel.reviews, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- Image carousel column -->
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Image Carousel -->
                            <FlipView Grid.Column="0" 
                              Width="100" 
                              Height="100" 
                              Margin="0,0,10,0"
                              ItemsSource="{Binding images}">
                                <FlipView.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Bind to the image URL -->
                                        <Image 
                                    Source="{Binding url}" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    Stretch="Uniform" />
                                    </DataTemplate>
                                </FlipView.ItemTemplate>
                            </FlipView>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding sellerId}" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="{Binding description}" TextWrapping="Wrap" Margin="0,5,0,5"/>
                                <RatingControl Value="{Binding rating, Mode=OneWay}" 
                                       IsClearEnabled="False" IsReadOnly="True" 
                                       MaxRating="5" Foreground="Gold"/>
                            </StackPanel>

                            <!-- Delete Button (X) -->
                            <Button Content="X" 
                            VerticalAlignment="Top" 
                            HorizontalAlignment="Right" 
                            Width="50" Height="50" 
                            Margin="0,0,-1000,5" 
                            FontWeight="Bold" 
                            Foreground="Red"
                            Background="Transparent" 
                            BorderBrush="Transparent"
                            Click="DeleteReviewButton_Click"/>

                            <!-- Edit Button -->
                            <Button Content="Edit" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Right" 
                                Width="100" Height="50" 
                                Margin="0,40,-1025,5" 
                                FontWeight="Bold" 
                                Foreground="Gray"
                                Background="Transparent" 
                                BorderBrush="Transparent"
                                Click="EditReviewButton_Click"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <!-- No Reviews Message -->
        <TextBlock x:Name="EmptyMessageTextBlock"
                   Text="No results found."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Foreground="Gray"/>
    </Grid>
</Window>
